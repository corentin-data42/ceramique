{% extends 'admin/base.html.twig' %}

{% block title %}liste des oxydes{% endblock %}

{% block body %}
<p>
    liste des oxydes :
</p>
<a class="btn btn-sm btn-primary" href={{ path('admin.oxyde.create')}}>Cr√©er un nouvel oxyde</a>
<table class="table">
    <thead>
        <tr>
            <th>Oxyde</th>
            <th>Formule</th>
            <th>type</th>
            <th>actif</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for oxyde in oxydes %}
            <tr>
                <td>
                    {{ oxyde.nom }}
                </td>
                <td>
                    {{ oxyde.formule }}
                </td>
                <td>
                    {{ oxyde.type }}
                </td>
                <td>
                     {{ oxyde.flagEtat ? 'Actif' : 'Inactif' }}
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-sm btn-primary" href={{ path('admin.oxyde.edit',{ id:oxyde.id })}}>Modifier</a>
                        <form action="{{ path('admin.oxyde.remove',{ id:oxyde.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit" class="btn btn-sm btn-danger" >Supprimer</a>
                        </form>
                    </div>
                    
                </td>
                
            </tr>
    {% endfor %}
    </tbody
    

</table>
{% endblock %}
